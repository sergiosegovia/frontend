azul = #22bce0
gris_oscuro = #444
gris_texto = #7a7a7a
naranja = #dd4f24
estrella = #FFBE2C



@font-face {
	font-family: 'mobilefirst';
	src:url('../fonts/mobilefirst.eot?-cgfk1v');
	src:url('../fonts/mobilefirst.eot?#iefix-cgfk1v') format('embedded-opentype'),
		url('../fonts/mobilefirst.woff?-cgfk1v') format('woff'),
		url('../fonts/mobilefirst.ttf?-cgfk1v') format('truetype'),
		url('../fonts/mobilefirst.svg?-cgfk1v#mobilefirst') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja

body
	background #e8e8e8
	color gris_oscuro
	font-size 16px
	font-family: 'Open Sans', sans-serif;

footer
	background naranja
	color rgba(white, 0.7)
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block

		.mejorandola
			&:before
			&:after
				content " - "


header
	background gris_oscuro
	color white
	overflow hidden
	padding 0.5em
	position relative

	figure
		margin 0

	.logo
		border-right 1px solid azul
		float left
		width 60px

		img 
			width 52px

	.titular
		margin 0 60px 0 70px

		.filtro
			color azul
			font-weight bold
			font-size 14px
			font-style italic
			text-decoration none

		.publicar
			background naranja
			color white
			display block
			float right
			font-style italic
			margin -5px 0.5em 0  0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black
			&:before
				content "\e600"
				font-family mobilefirst


		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		right 0.5em
		top 0.5em

		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2

			img
				border-radius 50%
				width 50px

		.flechita
			background naranja
			color white
			display block
			padding 3px
			position absolute
			right 0
			text-align right
			top 15px
			width 50%

nav 
	background azul
	border-left 15px solid white

	.menu
		height 40px
		line-height 40px
		margin 0
		overflow-x auto
		padding 0
		white-space nowrap

		li
			display inline-block

			a 
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none

.listado
	padding 0.5em
	overflow hidden

	.acciones
		border-top 3px solid azul
		padding 0.5em
		overflow hidden

		.datos
			float right

			.comentarios
				background gris_texto
				border-radius 3px
				color white
				margin 0 0.3em 0 0
				padding 2px 5px
				text-decoration none

			.favorito
				color estrella
				text-decoration none
				&:before
					content "\e601"
					font-family "mobilefirst"



		.votos
			float left

			.down 
			.up
				text-decoration none

			.down
				color red
				&:before
					content "\e602"
					font-family "mobilefirst"
					

			.up
				color green
				&:before
					content "\e603"
					font-family "mobilefirst"
					

	.descripcion
		color gris_texto

		.detalles
			height 160px
			margin-left 130px


			.autor
				margin 0.5em 0 2em 0

			.fecha 
				float right
				margin 0 1em 0 0
				

			.tag 
				background azul
				border-radius 0.5em
				color white
				padding 0.2em 0.5em
				text-decoration none

			.titulo
				color gris_oscuro
				font-size 18px
				font-style italic
				margin 0
				padding 0.5em 0.5em 0 0

		.imagen
			float left
			margin 0
			img
				height 160px
				vertical-align top
				width 120px


	.post 
		background white
		color gris_texto
		margin-bottom 1em
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)

@media screen and (min-width: 768px)

	header 
		.titular
			.publicar
				padding-left 3em
				position relative

				&:before
					left 0px
					font-size 2.5em
					position absolute
					top -10px

	.listado
		.post
			display inline-block
			width 49%
			&:nth-child(odd)
				float left
				margin-right 1%
			&:nth-child(even)
				float right
				


